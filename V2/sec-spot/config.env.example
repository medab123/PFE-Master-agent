# config.env.example
# Copy this file to config.env and adjust values as needed

# Agent identification
AGENT_VERSION=1.0.0
SERVER_ID=1

# Server connection
API_BASE_URL=http://your-server-url
REVERB_URI=ws://your-server-host:6001/app/your-app-key
REVERB_CHANNEL=your-app-key

# Monitoring settings
MONITORING_INTERVAL=60  # System metrics collection interval in seconds
RETRIES=3               # Number of connection retries

# Logging settings
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/var/log/sec-spot-agent.log

# Security settings
SEND_ALL_LOGS=false     # Set to true to send all logs, not just errors/warnings

# Network monitoring settings
MONITOR_NETWORK_TRAFFIC=true
MAX_PACKETS=100         # Maximum packets to collect before sending

# Security monitoring settings
SECURITY_CHECK_INTERVAL=300  # Security check interval in seconds